<!--                              <ComboBox fx:id="comboCategorie" prefWidth="200.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" GridPane.columnIndex="1" GridPane.rowIndex="5" />-->


                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Image :" GridPane.rowIndex="4" />
                              <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                 <TextField fx:id="txtImageProduits" prefWidth="300.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" />
                                 <Button fx:id="btnImage" style="
                                -fx-background-color: #2C3E50;
                                -fx-text-fill: white;
                                -fx-font-size: 14px;
                                -fx-font-weight: bold;
                                -fx-border-radius: 8;
                                -fx-background-radius: 8;
                                -fx-padding: 10 20;
                                -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);
                                -fx-cursor: hand;
                                -fx-min-width: 120;
                            " text="Parcourir" />
                              </HBox>

                              <columnConstraints>
                                 <ColumnConstraints />
                                 <ColumnConstraints />
                              </columnConstraints>
                              <rowConstraints>
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                                 <RowConstraints />
                              </rowConstraints>
                           </GridPane>

                           <!-- Boutons d'action organisés en 2x2 -->
                           <GridPane layoutX="250.0" layoutY="540.0" prefHeight="110.0" prefWidth="312.0" hgap="20.0" vgap="20.0" alignment="CENTER">
                              <!-- Première ligne : Ajouter et Modifier -->
                              <Button fx:id="btnAjouter" style="
                            -fx-background-color: #2C3E50;
                            -fx-text-fill: white;
                            -fx-font-size: 14px;
                            -fx-font-weight: bold;
                            -fx-border-radius: 8;
                            -fx-background-radius: 8;
                            -fx-padding: 10 20;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);
                            -fx-cursor: hand;
                            -fx-min-width: 120;
                        " text="Ajouter" GridPane.rowIndex="0" GridPane.columnIndex="0" />

                              <Button fx:id="btnModifier" style="
                            -fx-background-color: #2C3E50;
                            -fx-text-fill: white;
                            -fx-font-size: 14px;
                            -fx-font-weight: bold;
                            -fx-border-radius: 8;
                            -fx-background-radius: 8;
                            -fx-padding: 10 20;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);
                            -fx-cursor: hand;
                            -fx-min-width: 120;
                        " text="Modifier" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                              <!-- Deuxième ligne : Supprimer et Effacer -->
                              <Button fx:id="btnSupprimer" style="
                            -fx-background-color: #2C3E50;
                            -fx-text-fill: white;
                            -fx-font-size: 14px;
                            -fx-font-weight: bold;
                            -fx-border-radius: 8;
                            -fx-background-radius: 8;
                            -fx-padding: 10 20;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);
                            -fx-cursor: hand;
                            -fx-min-width: 120;
                        " text="Supprimer" GridPane.rowIndex="1" GridPane.columnIndex="0" />

                              <Button fx:id="btnEffacer" style="
                            -fx-background-color: #2C3E50;
                            -fx-text-fill: white;
                            -fx-font-size: 14px;
                            -fx-font-weight: bold;
                            -fx-border-radius: 8;
                            -fx-background-radius: 8;
                            -fx-padding: 10 20;
                            -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);
                            -fx-cursor: hand;
                            -fx-min-width: 120;
                        " text="Effacer" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                           </GridPane>
