                        <!-- Titre de la page -->
                        <Label alignment="CENTER" layoutX="200.0" layoutY="10.0" prefHeight="40.0" prefWidth="400.0" text="Gestion des Produits">
                           <font>
                              <Font name="Arial Black" size="28.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.3), 10, 0.5, 0, 2);
                           </style>
                        </Label>

                        <!-- Formulaire pour ajouter/modifier des produits -->
                        <VBox layoutX="50.0" layoutY="60.0" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #BDC3C7; -fx-border-radius: 10; -fx-padding: 15; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                           <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Formulaire Produit" />
                           <GridPane hgap="10" vgap="10">
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Nom du produit :" />
                              <TextField fx:id="txtNom" prefWidth="200.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" GridPane.columnIndex="1" />

                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Description :" GridPane.rowIndex="1" />
                              <TextField fx:id="txtDescription" prefWidth="400.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Prix (€) :" GridPane.rowIndex="2" />
                              <TextField fx:id="txtPrix" prefWidth="100.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Quantité en stock :" GridPane.rowIndex="3" />
                              <TextField fx:id="txtQuantite" prefWidth="100.0" style="-fx-padding: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9;" GridPane.columnIndex="1" GridPane.rowIndex="3" />



