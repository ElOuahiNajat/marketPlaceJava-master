         <children>
            <!-- Bouton Home -->
            <Button fx:id="btnHome" text="Home" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleHome" maxWidth="Infinity" />
            <!-- Bouton Commander -->
<!--            <Button fx:id="btnCommander" text="Commander produit" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleCommander" maxWidth="Infinity" />-->
            <!-- Bouton Gestion -->
            <Button fx:id="btnGestion" text="Gestion des produits" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleGestion" maxWidth="Infinity" />
            <!-- Bouton Notifications -->
            <Button fx:id="btnNotifications" text="Notifications" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleNotifications" maxWidth="Infinity" />
            <!-- Bouton Dashboard -->
            <Button fx:id="btnDashboard" text="Dashboard" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleDashboard" maxWidth="Infinity" />
            <!-- Bouton Gérer les utilisateurs -->
            <Button fx:id="btnGererUsers" text="Gérer les utilisateurs" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleGererUsers" maxWidth="Infinity" />
            <!-- Bouton Gérer les catégories -->
            <Button fx:id="btnGererCategories" text="Gérer les catégories" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleGererCategories" maxWidth="Infinity" />
