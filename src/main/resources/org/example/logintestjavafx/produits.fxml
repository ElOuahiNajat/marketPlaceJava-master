                        <HBox layoutX="650.0" layoutY="10.0" spacing="20.0">
                           <Label fx:id="welcomeLabel" prefHeight="25.0" prefWidth="131.0" style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Bienvenue !" />
                           <Button fx:id="btnQuitter" prefHeight="27.0" prefWidth="87.0"
                                   style="-fx-background-color: #2C3E50; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);"
                                   text="Logout" />
                        </HBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>

            <!-- Onglet "Gérer les catégories" -->
            <!-- Onglet "Gérer les catégories" -->
            <Tab fx:id="tabGererCategories" text="Gérer les catégories">
               <content>
                  <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <!-- Titre de la page -->
                        <Label alignment="CENTER" layoutX="200.0" layoutY="10.0" prefHeight="40.0" prefWidth="400.0" text="Gérer les catégories">
                           <font>
                              <Font name="Arial Black" size="28.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.3), 10, 0.5, 0, 2);
                           </style>
