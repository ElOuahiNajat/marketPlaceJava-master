                           <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Vos Produits" />

                           <!-- Conteneur pour les options de tri -->
                           <HBox alignment="CENTER_LEFT" spacing="10">
                              <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Trier par :" />
                              <ComboBox fx:id="comboTri" prefWidth="150.0" style="-fx-background-color: #F9F9F9; -fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-padding: 5;">
                                 <items>
                                    <FXCollections fx:factory="observableArrayList">
                                       <String fx:value="Nom (A-Z)" />
                                       <String fx:value="Nom (Z-A)" />
                                       <String fx:value="Prix (Croissant)" />
                                       <String fx:value="Prix (Décroissant)" />
                                    </FXCollections>
                                 </items>
                              </ComboBox>
                              <Button fx:id="btnTrier" text="Trier" style="
                            -fx-background-color: #2C3E50;
                            -fx-text-fill: white;
                            -fx-font-size: 14px;
                            -fx-font-weight: bold;
                            -fx-border-radius: 5;
                            -fx-background-radius: 5;
                            -fx-padding: 5 10;
                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);
                        " />
                           </HBox>

                           <!-- Liste des produits -->
                           <ListView fx:id="produitsListView" prefHeight="150.0" prefWidth="680.0" style="-fx-border-color: #BDC3C7; -fx-border-radius: 5; -fx-background-color: #F9F9F9; -fx-padding: 5;" />
                        </VBox>

