            <Button fx:id="btnLogout" text="Logout" style="-fx-background-color: white; -fx-text-fill: #2C3E50; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" onAction="#handleLogout" maxWidth="Infinity" />
         </children>
      </VBox>

      <!-- Contenu principal avec les onglets -->
      <TabPane fx:id="mainTabPane" prefHeight="600.0" prefWidth="700.0" style="-fx-background-color: #FFFFFF;">
         <tabs>
            <!-- Onglet "Home" -->
            <Tab fx:id="tabHome" text="Home">
               <content>
                  <StackPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;">
                     <!-- Cadre stylisé pour le message de bienvenue -->
                     <VBox alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-border-color: #2C3E50; -fx-border-radius: 15; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.3), 15, 0.5, 0, 2);">
                        <!-- Message de bienvenue -->
                        <Label fx:id="welcomeMessage" alignment="CENTER" text="Bienvenue sur notre Marketplace !">
                           <font>
                              <Font name="Arial Black" size="28.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.5), 10, 0.5, 0, 2);
                           </style>
                        </Label>
                        <!-- Sous-titre -->
                        <Label alignment="CENTER" text="Découvrez nos produits et profitez d'une expérience unique." wrapText="true">
                           <font>
                              <Font name="Arial" size="16.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-weight: bold;
                           </style>
                        </Label>
                     </VBox>
                  </StackPane>
               </content>
            </Tab>

            <!-- Onglet "Commander des Produits" -->
            <Tab fx:id="tabCommander" text="Commander des Produits">
               <content>
                  <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;">
                     <children>
                        <!-- Titre centré -->
                        <Label alignment="CENTER" layoutX="0.0" layoutY="20.0" prefHeight="40.0" prefWidth="800.0"
                               text="Commander des Produits">
                           <font>
                              <Font name="Montserrat Bold" size="28.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-weight: bold;
                              -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.3), 10, 0.5, 0, 2);
                           </style>
                        </Label>

                        <!-- Message d'information centré -->
                        <Label alignment="CENTER" layoutX="0.0" layoutY="60.0" prefHeight="30.0" prefWidth="800.0"
                               text="Pour envoyer un message au vendeur, accédez à l'onglet Notifications">
                           <font>
                              <Font name="Roboto" size="14.0" />
                           </font>
                           <style>
                              -fx-text-fill: #2C3E50;
                              -fx-font-style: italic;
                           </style>
                        </Label>

                        <!-- Conteneur principal avec espace à gauche -->
                        <VBox alignment="CENTER" layoutX="50.0" layoutY="100.0" prefHeight="500.0" prefWidth="700.0" spacing="20.0">
                           <!-- Barre de recherche centrée -->
                           <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 10;">
                              <TextField fx:id="txtSearch" prefWidth="500.0" prefHeight="35.0" promptText="Rechercher un produit par nom..."
                                         style="-fx-padding: 8 15;
                                         -fx-background-color: white;
                                         -fx-border-color: #BDC3C7;
                                         -fx-border-radius: 20;
                                         -fx-background-radius: 20;
                                         -fx-font-size: 14px;" />

                              <Button fx:id="btnSearch" text="Rechercher"
                                      style="-fx-background-color: #2C3E50;
                                       -fx-text-fill: white;
                                       -fx-font-size: 14px;
                                       -fx-font-weight: bold;
                                       -fx-border-radius: 20;
                                       -fx-background-radius: 20;
                                       -fx-padding: 8 20;
                                       -fx-cursor: hand;" />
                           </HBox>

                           <!-- Conteneur des produits centré -->
                           <VBox alignment="CENTER" prefHeight="400.0" prefWidth="650.0"
                                 spacing="10.0" styleClass="products-container">
                              <style>
                                 -fx-background-color: rgba(255, 255, 255, 0.9);
                                 -fx-border-color: #BDC3C7;
                                 -fx-border-radius: 10;
                                 -fx-padding: 15;
                                 -fx-background-radius: 10;
                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);
                              </style>

                              <Label alignment="CENTER" text="Produits disponibles"
                                     style="-fx-font-size: 20px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #2C3E50;" />

                              <!-- Grille de produits scrollable -->
                              <ScrollPane fitToWidth="true" prefHeight="330.0"
                                          style="-fx-background-color: transparent;
                                          -fx-padding: 5;">
                                 <content>
                                    <FlowPane fx:id="produitsDisponiblesListView"
                                              alignment="CENTER"
                                              hgap="15.0"
                                              vgap="20.0"
                                              prefWrapLength="630.0"
                                              style="-fx-padding: 10;">

                                       <!-- Exemple de produit (à répéter dynamiquement) -->
                                       <VBox alignment="CENTER" prefHeight="200.0" prefWidth="180.0" spacing="10.0"
                                             style="-fx-background-color: #ffffff;
                                                 -fx-border-color: #BDC3C7;
                                                 -fx-border-radius: 10;
                                                 -fx-padding: 15;
                                                 -fx-background-radius: 10;
                                                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                                          <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true"
                                                     style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 1);" />
                                          <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Nom du produit" />
                                          <Label style="-fx-font-size: 14px; -fx-text-fill: #2C3E50;" text="Prix : 0€" />
                                          <Button style="-fx-background-color: #2C3E50;
                                                       -fx-text-fill: white;
                                                       -fx-font-size: 14px;
                                                       -fx-font-weight: bold;
                                                       -fx-border-radius: 5;
                                                       -fx-background-radius: 5;
                                                       -fx-padding: 8 20;
                                                       -fx-cursor: hand;"
                                                  text="commander" />
                                       </VBox>
                                    </FlowPane>
                                 </content>
                              </ScrollPane>
                           </VBox>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>

            <!-- Onglet "Gestion des Produits" -->
            <Tab fx:id="tabGestion" text="Gestion des Produits">
               <content>
                  <AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #FFFFFF;">
